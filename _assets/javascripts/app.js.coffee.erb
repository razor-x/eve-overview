# Require JavaScript for responsive images
<%= case site.config['picture']['markup']
    when 'picturefill'
      require_asset 'vendor/picturefill'
    when 'interchange'
      require_asset 'foundation/js/foundation/foundation.interchange'
    end unless site.config['picture'].nil?
%>

# Invoke Foundation
$(document).foundation()

